    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp task",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "args": [
                "build"
            ]
        },
        {
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/server/app",
            "outFiles": ["${workspaceRoot}/server/**/*.js.map", "${workspaceRoot}/server/**/*.js", "${workspaceRoot}/server/*.js"],
            "sourceMaps": true
        }
    ]
}